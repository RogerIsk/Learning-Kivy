<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Nike"
            font_size: 45
            background_color: (1,1,1,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            # text properties
            color: (1,0,0,1)
            bold: True
            italic: True
            outline_color: (0,0,1)
            outline_width: 3



        TextInput:
            multiline: False

        Button:
            text: "Clear"
            background_color: (0,0,0,1)